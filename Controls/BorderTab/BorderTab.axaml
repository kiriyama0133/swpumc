<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:material="using:Material.Icons.Avalonia"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="swpumc.BorderTab">
  
  <UserControl.Styles>
    <Style Selector="UserControl">
      <Setter Property="Background" Value="{DynamicResource SukiCardBackground}"/>
      <Setter Property="CornerRadius" Value="12,12,0,0"/>
      <Setter Property="Height" Value="50"/>
    </Style>
    
    <!-- 动画样式 -->
    <Style Selector="Button">
      <Setter Property="Width" Value="40"/>
      <Setter Property="Height" Value="40"/>
      <Setter Property="Background" Value="Transparent"/>
      <Setter Property="BorderThickness" Value="0"/>
      <Setter Property="CornerRadius" Value="20"/>
      <Setter Property="HorizontalContentAlignment" Value="Center"/>
      <Setter Property="VerticalContentAlignment" Value="Center"/>
      <Setter Property="Cursor" Value="Arrow"/>
      
      <!-- 过渡动画 - 加快速度 -->
      <Setter Property="Transitions">
        <Transitions>
          <BrushTransition Property="Background" Duration="0:0:0.1"/>
          <BrushTransition Property="Foreground" Duration="0:0:0.1"/>
          <DoubleTransition Property="Opacity" Duration="0:0:0.1"/>
        </Transitions>
      </Setter>
    </Style>
    
    <!-- Hover 效果 -->
    <Style Selector="Button:pointerover">
      <Setter Property="Background" Value="Transparent"/>
      <Setter Property="Opacity" Value="0.7"/>
      <Setter Property="Cursor" Value="Hand"/>
    </Style>
    
    <!-- Pressed 效果 -->
    <Style Selector="Button:pressed">
      <Setter Property="Background" Value="{DynamicResource SukiControlTouchBackground}"/>
      <Setter Property="Opacity" Value="0.9"/>
    </Style>
  </UserControl.Styles>
  
  <Border Background="{DynamicResource SukiCardBackground}" 
          CornerRadius="12,12,0,0"
          Height="50">
    <Grid Margin="15,0,15,0">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="*"/>
        <ColumnDefinition Width="Auto"/>
      </Grid.ColumnDefinitions>
      
      <!-- 左侧标题文本 -->
      <TextBlock Grid.Column="0"
                 Text="Minecraft Launcher By SWPU"
                 FontSize="14"
                 FontWeight="SemiBold"
                 FontFamily="{StaticResource Minecraft}"
                 Foreground="{DynamicResource SukiText}"
                 VerticalAlignment="Center"
                 HorizontalAlignment="Left"/>
      
      <!-- 窗口控制按钮 -->
      <StackPanel Grid.Column="1" 
                 Orientation="Horizontal" 
                 Spacing="8"
                 Margin="0,0,0,0"
                 HorizontalAlignment="Right">
        
        <!-- 最小化按钮 -->
        <Button Name="MinimizeButton"
                Click="OnMinimizeClick">
          <TextBlock Text="−" 
                     FontSize="16" 
                     FontWeight="Bold"
                     Foreground="{DynamicResource SukiText}"
                     HorizontalAlignment="Center"
                     VerticalAlignment="Center"/>
        </Button>
        
        <!-- 关闭按钮 -->
        <Button Name="CloseButton"
                Click="OnCloseClick">
          <TextBlock Text="×" 
                     FontSize="16" 
                     FontWeight="Bold"
                     Foreground="{DynamicResource SukiText}"
                     HorizontalAlignment="Center"
                     VerticalAlignment="Center"/>
        </Button>
      </StackPanel>
    </Grid>
  </Border>
</UserControl>
