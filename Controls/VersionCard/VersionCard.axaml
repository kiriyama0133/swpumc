<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:sukiUi="clr-namespace:SukiUI.Controls;assembly=SukiUI"
             xmlns:material="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
             mc:Ignorable="d" d:DesignWidth="300" d:DesignHeight="200"
             x:Class="swpumc.Controls.VersionCard.VersionCard">
    
    <sukiUi:GlassCard Width="280" Height="180" 
                      CornerRadius="12" 
                      Padding="16">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- 版本标题和类型标签 -->
            <Grid Grid.Row="0" Margin="0,0,0,12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0">
                    <TextBlock Text="{Binding DisplayName}" 
                               FontSize="18" 
                               FontWeight="Bold"
                               Foreground="{DynamicResource SukiText}"/>
                    <TextBlock Text="{Binding TypeDisplayName}" 
                               FontSize="12"
                               Foreground="{DynamicResource SukiLowText}"
                               Margin="0,2,0,0"/>
                </StackPanel>
                
                <!-- 版本状态标签 -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="6">
                    <Border Background="Green" 
                            CornerRadius="8" 
                            Padding="6,2"
                            IsVisible="{Binding IsLatest}">
                        <TextBlock Text="最新" 
                                   FontSize="10" 
                                   Foreground="White" 
                                   FontWeight="Bold"/>
                    </Border>
                    
                    <Border Background="Orange" 
                            CornerRadius="8" 
                            Padding="6,2"
                            IsVisible="{Binding IsRecommended}">
                        <TextBlock Text="推荐" 
                                   FontSize="10" 
                                   Foreground="White" 
                                   FontWeight="Bold"/>
                    </Border>
                </StackPanel>
            </Grid>
            
            <!-- 版本信息 -->
            <StackPanel Grid.Row="1" Spacing="8">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <material:MaterialIcon Kind="Calendar"
                                          Width="16" 
                                          Height="16"
                                          Foreground="{DynamicResource SukiLowText}"
                                          VerticalAlignment="Center"/>
                    <TextBlock Grid.Column="1" 
                               Text="{Binding TimeAgo}" 
                               FontSize="12"
                               Foreground="{DynamicResource SukiLowText}"
                               VerticalAlignment="Center"
                               Margin="8,0,0,0"/>
                </Grid>
                
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <material:MaterialIcon Kind="Tag"
                                          Width="16" 
                                          Height="16"
                                          Foreground="{DynamicResource SukiLowText}"
                                          VerticalAlignment="Center"/>
                    <TextBlock Grid.Column="1" 
                               Text="{Binding Type}" 
                               FontSize="12"
                               Foreground="{DynamicResource SukiLowText}"
                               VerticalAlignment="Center"
                               Margin="8,0,0,0"/>
                </Grid>
            </StackPanel>
            
            <!-- 底部操作按钮和进度 -->
            <StackPanel Grid.Row="2" Spacing="8">
                <!-- 下载进度 -->
                <StackPanel IsVisible="{Binding IsDownloading}" Spacing="4">
                    <TextBlock Text="{Binding DownloadStatus}" 
                               FontSize="10"
                               Foreground="{DynamicResource SukiLowText}"
                               HorizontalAlignment="Center"/>
                    <ProgressBar Value="{Binding DownloadProgress}" 
                                 Maximum="100"
                                 Height="4"
                                 Foreground="{DynamicResource SukiPrimary}"/>
                </StackPanel>
                
                <!-- 操作按钮 -->
                <StackPanel Orientation="Horizontal" Spacing="8" HorizontalAlignment="Right">
                    <Button Classes="Standard Primary" 
                            Content="下载"
                            FontSize="12"
                            Padding="12,6"
                            Command="{Binding DownloadCommand}"
                            IsEnabled="{Binding !IsDownloading}"/>
                </StackPanel>
            </StackPanel>
        </Grid>
    </sukiUi:GlassCard>
</UserControl>
